@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1 style="text-align:center; font-size:50px;color:forestgreen;font-family:Elephant;font-style:italic;">Müşteriler</h1>
<br />

<table class="table table-striped" style="margin-top:20px;">
    <tr>
        <th style="text-align:center;">ID</th>
        <th style="text-align:center;">AD</th>
        <th style="text-align:center;">SOYAD</th>
        <th style="text-align:center;">ŞEHİR</th>
        <th style="text-align:center;">MAİL</th>
        <th style="text-align:center;">DETAYLAR</th>
        <th style="text-align:center;">GÜNCELLE</th>
        <th style="text-align:center;">SİL</th>

    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td style="text-align:center;">@c.Id</td>
            <td style="text-align:center;">@c.FirstName</td>
            <td style="text-align:center;">@c.LastName</td>
            <td style="text-align:center;">@c.City</td>
            <td style="text-align:center;">@c.Mail</td>
            <td style="text-align:center;"><a href="#"><i class="fas fa-list-alt" style="color:blue"></i></a></td>
            <td style="text-align:center;"><a href="#"><i class="fas fa-spinner" style="color: green;"></i></a></td>
            <td style="text-align:center;"><a href="#"><i class="fas fa-times" style="color:red"></i></a></td>

        </tr>
    }
</table>

<a href="/Customer/CustomerAdd" class="btn btn-primary">Müşteri Ekle</a>
