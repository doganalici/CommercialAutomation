@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th style="text-align:center;">ID</th>
        <th style="text-align:center;">KATEGORİ ADI</th>
        <th style="text-align:center;">GÜNCELLE</th>
        <th style="text-align:center;">SİL</th>

    </tr>

    @foreach (var c in Model)
    {
        <tr>
            <td style="text-align:center;">@c.Id</td>
            <td style="text-align:center;">@c.Name</td>
            <td style="text-align:center;"><a href="/Category/CategoryGet/@c.Id"><i class="fas fa-spinner" style="color: green;"></i></a></td>
            <td style="text-align:center;"><a href="/Category/CategoryDelete/@c.Id"><i class="fas fa-times" style="color:red"></i></a></td>

        </tr>
    }


</table>

<a href="/Category/CategoryAdd" class="btn btn-primary">Kategori Ekle</a>


