@model MvcOnlineTicariOtomasyon.Models.Classes.Product
@{
    ViewBag.Title = "ProductAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1 style="text-align:center; font-size:50px;color:forestgreen;font-family:Elephant;font-style:italic;">Yeni Ürün Ekleme</h1>
<br />

<form class="form-group" method="post">

    <label>Ürün Kategorisi</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.lst1, new { @class = "form-control" })
    @*@Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })*@
    <br />

    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />

    <label>Ürün Markası</label>
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />

    <label>Ürün Stok Adedi</label>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />

    <label>Ürün Alış Fiyatı</label>
    @Html.TextBoxFor(x => x.BuyingPrice, new { @class = "form-control" })
    <br />

    <label>Ürün Satış Fiyatı</label>
    @Html.TextBoxFor(x => x.SellingPrice, new { @class = "form-control" })
    <br />

    <label>Ürün Durumu</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />

    <label>Ürün Görseli</label>
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kaydet</button>
</form>
