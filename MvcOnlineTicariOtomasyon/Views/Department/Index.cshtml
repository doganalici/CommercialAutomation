@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1 style="text-align:center; font-size:50px;color:forestgreen;font-family:Elephant;font-style:italic;">Departman Listesi</h1>
<br />

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th style="text-align:center;">ID</th>
        <th style="text-align:center;">DEPARTMAN ADI</th>
        <th style="text-align:center;">DEPARTMAN DETAYI</th>
        <th style="text-align:center;">GÜNCELLE</th>
        <th style="text-align:center;">SİL</th>

    </tr>

    @foreach (var d in Model)
    {
        <tr>
            <td style="text-align:center;">@d.Id</td>
            <td style="text-align:center;">@d.Name</td>
            <td style="text-align:center;"><a href="/Department/DepartmentDetail/@d.Id"><i class="fas fa-list-alt" style="color:blue"></i></a></td>
            <td style="text-align:center;"><a href="/Department/DepartmentGet/@d.Id"><i class="fas fa-spinner" style="color: green;"></i></a></td>
            <td style="text-align:center;"><a href="/Department/DepartmentDelete/@d.Id"><i class="fas fa-times" style="color:red"></i></a></td>

        </tr>
    }
</table>

<a href="/Department/DepartmentAdd" class="btn btn-primary">Departman Ekle</a>
